{
    "name": "root",
    "scripts": {
        "bootstrap": "lerna bootstrap",
        "bump": "ncu -u && npm update && npm install && lerna bootstrap",
        "pack": "npm run bump && git add -A && git commit -am \"packed\" --allow-empty && lerna version patch --yes --force-publish",
        "dev": "lerna run watch --stream --parallel",
        "build": "lerna run build --stream",
        "start": "lerna run start --stream",
        "release:patch": "git add -A && git commit -am \"released\" --allow-empty && lerna version patch --yes --force-publish",
        "test": "jest",
        "test:unit": "jest --testPathIgnorePatterns packages/runner-e2e",
        "test:e2e": "jest \"packages/runner-e2e\"",
        "watch": "jest --watch",
        "watch:executor": "jest \"packages/runner-executor\" --watch",
        "watch:config": "jest \"packages/runner-config\" --watch",
        "watch:worker": "jest \"packages/runner-worker\" --watch",
        "prepare": "husky install"
    },
    "devDependencies": {
        "@geislabs/geis": "^0.0.7",
        "@types/jest": "^26.0.23",
        "@types/jsonpath": "^0.2.0",
        "@types/rimraf": "^3.0.0",
        "eslint": "^7.26.0",
        "file-url": "^4.0.0",
        "husky": "^6.0.0",
        "inversify": "^5.1.1",
        "ix": "^4.3.1",
        "jest": "^26.6.3",
        "jsonpath": "^1.1.1",
        "lerna": "^4.0.0",
        "npm-check-updates": "^11.5.11",
        "reflect-metadata": "^0.1.13",
        "rimraf": "^3.0.2",
        "supertest": "^6.1.3",
        "ts-jest": "^26.5.6",
        "ts-loader": "^9.1.2",
        "ts-node": "^9.1.1",
        "typescript": "^4.2.4",
        "zod": "^3.0.2"
    }
}
